{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__"],
  "references": [
    { "path": "../ui-chakra" }
  ],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/ui-chakra/*": ["../ui-chakra/src/*"],
      "@webiny/ui-chakra": ["../ui-chakra/src"]
    },
    "baseUrl": "."
  }
}
